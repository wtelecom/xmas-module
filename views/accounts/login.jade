block content
    form.form-signin.panel.panel-body(role='form', ng-submit="account_process('login')", method="post")
      div.alert.alert-danger.alert.dimissble(ng-if='credentials_problem')= __('Username or password incorrect')
      h2.form-signin-heading= __('Please sign in')
      input.form-control.username(type='text', placeholder='Username', name="username", ng-model="formData.username", required='', autofocus='')
      input.form-control.password(type='password', placeholder='Password',name="password", ng-model="formData.password", required='')
      button.btn.btn-lg.btn-primary.btn-block(type='submit')= __('Sign in')
