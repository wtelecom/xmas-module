div.row
    div.col-md-12
        h4.title= __('Xmas actions - Xmas config')
        hr
    div.col-xs-12
        div.row
            div.col-xs-12.col-md-6
                div.col-xs-12
                    h5= __('Xmas categories') 
                div.col-xs-12(style="margin-bottom: 10px;")
                    div.input-group
                        input(type="text", ng-model="formData.category", class="form-control", placeholder="#{__('Category name')}")
                        span.input-group-btn
                            a(href="", class="btn", ng-click="add_category(formData.category)")= __('Add category')
                div.col-xs-12
                    div(ng-show="categories.length")
                        ul.list-group
                            li.list-group-item(ng-repeat="category in categories")
                                ng-edit-in-place(value="category", cid="$index")
                    div(ng-show="!categories.length")
                        div.alert.alert-warning.alert-dismissable
                            button(type="button", class="close", data-dismiss="alert", aria-hidden="true") Ã—
                            p
                                strong= __('Warning!')
                                &nbsp; 
                                span= __('No categories availables')
            div.col-xs-12.col-md-6
                div.col-xs-12
                    h5= __('Xmas Steps') 
                div.col-xs-12
                    select.form-control(ng-model="formData.step", ng-options="step.title for step in steps")
