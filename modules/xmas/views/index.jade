h1 Xmas
.panel.panel-default
  .panel-body
    .col-xs-2
      label Nombre del autor
    .col-xs-3
      input(type="text").form-control
    .col-xs-3
      input(type="file")
    .col-xs-2
      button.btn.success Guardar foto
.panel.panel-default.col-xs-12
  h2 Mis im√°genes
  div(ng-repeat="cat in categories")
    h3 {{cat.title}}
    .row
      .col-xs-12.col-sm-6.col-lg-3(ng-repeat="img in cat.imgs")
        div.thumbnail
          img(ng-src='{{img.url}}').img-responsive
          .caption
            h3 {{img.author}}
              span.badge(ng-if="img.votes") {{img.votes}}
