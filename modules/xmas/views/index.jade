h1 Xmas
.panel.panel-default
  .panel-body
    .col-xs-2
      label Nombre del autor
    .col-xs-3
      input(type="text", ng-model="form.author").form-control
    .col-xs-3
      input(type="file", ng-model="form.picture", name="file", base-sisty-four-input)
    .col-xs-2
      button.btn.success(ng-click="upload_picture()") Guardar foto
    {{ form.picture }}
.panel.panel-default.col-xs-12
  h2 Mis im√°genes
  div(ng-repeat="cat in categories")
    h3 {{cat.title}}
    .row
      .col-xs-12.col-sm-6.col-lg-3(ng-repeat="img in cat.imgs")
        div.thumbnail
          img(ng-src='{{img.url}}').img-responsive
          .caption
            h3 {{img.author}}
              span.badge(ng-if="img.votes") {{img.votes}}
